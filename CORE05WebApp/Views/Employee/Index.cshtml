@model IEnumerable<CORE05WebApp.Models.Employeedetail>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="row">
        <h3>Employee Details</h3>
        <h4 class="float-right"><a asp-controller="Employee" asp-action="Create" class="btn btn-success mx-1">Create New Employee</a></h4>
    </div>
   
    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Employee Name</th>
                    <th>Joining Date</th>
                    <th>Gender</th>
                    <th>District ID</th>
                    <th>Address</th>
                    <th>Active</th>
                    <th>Image</th>
                    <th>Salary</th>
                    <th>Hobbies ID</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                <tr>
                    <td width="10%">@employee.Employeeid</td>
                    <td width="30%">@employee.Employeename</td>
                    <td width="10%">@employee.Joiningdate.ToString("dd-MMM-yyyy")</td>
                    <td width="20%">@employee.Gender</td>
                    <td width="10%">@employee.Districtid</td>
                    <td width="10%">@employee.Address</td>
                    <td width="10%">@employee.Active</td>
                    <td width="10%">@employee.Image</td>
                    <td width="10%">@employee.Salary</td>
                    <td width="10%">@employee.Hobbiesid</td>
                    <td width="20%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Employeeid" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Employeeid" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }

</body>
</html>
